#define base00 #000000
#define base01 #404040
#define base02 #606060
#define base03 #808080
#define base04 #c0c0c0
#define base05 #d0d0d0
#define base06 #e0e0e0
#define base07 #ffffff
#define base08 #ff0000
#define base09 #ff9900
#define base0A #ff0099
#define base0B #33ff00
#define base0C #00ffff
#define base0D #0066ff
#define base0E #cc00ff
#define base0F #3300ff

*foreground:   base05
*background:   base00
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base09
*color10:      base01
*color11:      base02
*color12:      base04
*color13:      base06
*color14:      base0F
*color15:      base07

! Xft settings
Xft*dpi: 96
Xft*antialias: true
Xft*hinting: true
Xft*rgba: rgb
Xft*autohint: false 
Xft*hintstyle: hintfull
Xft*lcdfilter: lcddefault

! URxvt settings
URxvt*scrollBar: false
URxvt*cursorBlink: true

URxvt*font: xft:Hack:size=10
URxvt*boldFont: xft:Hack:bold:size=10
URxvt*letterSpace: -1

! rofi settigs
rofi*color-normal: base00, base07, base00, base07, base00
rofi*color-urgent: base00, base08, base00, base08, base00
rofi*color-active: base00, base0D, base00, base0D, base00
rofi*color-window: base00, base07

rofi*font: Noto Sans Mono 10

rofi*matching: fuzzy
